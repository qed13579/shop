<template name="areaPicker">
  <picker-view class="picker-view" indicator-style="height: 50px;" style="width: 100%; height: 300px;" value="{{value}}" bindchange="bindChange" hidden='{{hidden}}'>
    <picker-view-column>
      <view wx:for="{{provinceData}}" wx:key="code" class="addr-item">{{item.fullNameDot}}</view>
    </picker-view-column>
    <picker-view-column>
      <view wx:for="{{cityData}}" wx:key="code" class="addr-item">{{item.fullNameDot}}</view>
    </picker-view-column>
    <picker-view-column wx:if="{{hideDistrict}}">
      <view wx:for="{{districtData}}" wx:key="code" class="addr-item">{{item.fullNameDot}}</view>
    </picker-view-column>
    <view class='opration'>
      <!-- <text>取消</text> -->
      <text bindtap='confirm'>确定</text>
    </view>
  </picker-view>
</template>