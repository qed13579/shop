<view class='wrap'>
  <view class='page-top '>
    <view>
      <text class='order-num' decode="{{true}}">运单编号:&nbsp;</text>{{logisticsid}}</view>
    <!-- <view><text class='order-num'>预计送达:</text> 5月20日</view> -->
  </view>




  <view class='line'></view>
