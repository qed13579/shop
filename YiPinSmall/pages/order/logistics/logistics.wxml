<block wx:for="{{list}}" wx:key>


<block wx:if="{{item.status==2}}" wx:key>
    <view class='list-item'>
      <view class='image-icon'>
        <!-- <image src='/images/nav-icons/icon.png' class='icon' mode='scaleToFill'></image> -->
         <image src='/images/nav-icons/icon-ed.png' class='icon' mode='scaleToFill'></image>
      </view>
      <view class='item-text special'>
        {{item.context}}
      </view>
      <view class='item-time'>{{item.time}}</view>
    </view>

</block>



