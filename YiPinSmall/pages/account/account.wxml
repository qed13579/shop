<view class="{{isIPX?'invoicebox2':'invoicebox'}}" animation="{{animationData}}">
  <view class='intop'>
    <view class='intopl'>礼品卡</view>

    <view class='intopr' bindtap='confirm'>x</view>
    <!-- <view class='intoprr' bindtap='translateY2'>绑定新卡</view> -->
  </view>




  <view class="tab-h">
    <view class="tab-item {{status==1?'active':''}}" data-status="1" bindtap="swichNav">可用礼品卡</view>
    <view class="tab-item {{status==2?'active':''}}" data-status="2" bindtap="swichNav">不可用礼品卡</view>

  </view>


  <view wx:if="{{status==1}}">

    <view class="discount" hidden='{{!hidden}}' wx:if="{{sheet==0}}">请选择礼品卡
      <text style='float:right' bindtap='tips'>使用说明</text> </view>
    <view class="discount" hidden='{{!hidden}}' wx:if="{{sheet!=0}}">您已选中礼品卡，可抵用￥{{totaldiscount/100}}
      <text style='float:right' bindtap='tips'>使用说明</text> </view>
    <view class='box'>


      <scroll-view class='boxbot' scroll-y="true" bindscrolltolower="lower" bindscrolltoupper="onPullDownRefresh">
        <block wx:for="{{carts}}" wx:key wx:for-item="item">

          <view class="content" data-index="{{index}}" bindtap="selectList">
            <view class='left'>
              <icon wx:if="{{item.selected}}" type="success" color="red" class="cart-pro-select" />
              <icon wx:else type="circle" class="cart-pro-select" />
            </view>

            <view class='leftimg' bindtap='togoodshow' data-id='{{item.id}}'>
              <image class="leftimg" src="{{item.img}}"></image>
            </view>
            <view class='right'>
              <view class='righttop'>
                {{item.title}}
              </view>
              <view class='righttop'>
                卡号：{{item.number}}
              </view>
              <!-- <view class='rightbottom'>
              <view class='rightbottomleft'>￥{{item.price/100}}</view>
              <view class='rightbottomright'>x{{item.count}}</view>
            </view> -->
              <view class='rightbottom'>
                <view class='rightbottomleft'>余额
                  <text style='font-size:30rpx; font-weight:bold;'>￥{{item.balance/100}}</text>
                </view>
                <view class='rightbottomright'>面值￥{{item.price/100}}</view>
              </view>

              <view class='rightmiddle'>
                有效期至：{{item.time}}
              </view>
            </view>
          </view>

        </block>
        <view class='tips3'>

          <!-- 底部加载提示 end -->
          <!-- 如果当前数据为空则显示 start  -->
          <!-- <view  class='notfind1' wx:if="{{carts==''}}">
          <image src='/images/goodlist/notfind.png'></image>
          <view class='text1'>暂无数据</view>
        </view> -->
          <view class='notfind1' bindtap='translateY2' wx:if="{{carts==''}}">
            <view class='newcardbtn'>
              绑定新卡
            </view>
          </view>


        </view>


      </scroll-view>

    </view>

  </view>


  <view wx:if="{{status==2}}">
    <view class="discount" hidden='{{!hidden}}'>以下礼品卡不满足使用要求
      <text style='float:right' bindtap='tips'>使用说明</text> </view>
    <view class='box'>
      <scroll-view class='boxbot' scroll-y="true" bindscrolltolower="lower" bindscrolltoupper="onPullDownRefresh">
        <block wx:for="{{carts2}}" wx:key wx:for-item="item">
          <view class="content">
            <view class='left'>
              <!-- <icon wx:if="{{item.selected}}" type="success" color="red" data-index="{{index}}" class="cart-pro-select" bindtap="selectList" />
            <icon wx:else type="circle" class="cart-pro-select" data-index="{{index}}" bindtap="selectList" /> -->
            </view>

            <view class='leftimg' bindtap='togoodshow' data-id='{{item.pid}}'>
              <image class="leftimg" src="{{item.img}}"></image>
            </view>

            <view class='right'>
              <view class='righttop'>
                {{item.title}}
              </view>
              <view class='righttop'>
                卡号：{{item.number}}
              </view>

              <view class='rightbottom'>
                <view class='rightbottomleft'>余额
                  <text style='font-size:30rpx;'>￥{{item.price/100}}</text> </view>
                <view class='rightbottomright'>面值￥{{item.price/100}}</view>
              </view>
              <view class='rightmiddle'>
                有效期至：{{item.time}}
              </view>
            </view>
          </view>
        </block>
        <view class='tips3'>

          <!-- <view wx:if="{{carts2==''}}" class='notfind1' >
          <image src='/images/goodlist/notfind.png'></image>
          <view class='text1'>暂无数据</view>
        </view> -->

          <view class='notfind1' bindtap='translateY2' wx:if="{{carts2==''}}">
            <view class='newcardbtn'>
              绑定新卡
            </view>
          </view>

        </view>

      </scroll-view>
    </view>
  </view>






  <view class="{{isIPX?'inbotton2':'inbotton'}}" wx:if="{{carts!=''&&status==1}}" bindtap='translateY2'>绑定新卡</view>
    <view class="{{isIPX?'inbotton22':'inbotton11'}}" wx:if="{{carts!=''&&status==1}}" bindtap='confirm'>确定</view>


  <view class="{{isIPX?'bottomm':''}}"></view>
  <view class="{{isIPX?'coverr':''}}"></view>

</view>





