  <view class="cart-footer {{isIPX?'isIPX':''}}">


    <button class="order-icon" form-type='submit' disabled='{{btndisable}}' style="background-color:{{'orangered'}}; color:{{'#fff'}}">
      提交订单
    </button>
    <text class="cart-toatl-price">￥{{(total-totaldiscount)/100}}</text>
