<!-- 骨架块 -->
<skeleton selector="skeleton" loading="spin" bgcolor="#FFF" wx:if="{{showSkeleton}}">
</skeleton>
<!-- 骨架块 -->
<view class='skeleton page'>
  <scroll-view scroll-y="true" style="height:100%" bindscrolltolower="onReachBottom" bindscrolltoupper="onPullDownRefresh">
    <view class='section-user'>
      <view class='bg'>
        <image src='/images/comment/bg.png'></image>
      </view>
      <view class='user-box'>
        <view class='section-user-left'>
          <image src='{{webUserData.img}}' class='user-img skeleton-radius'></image>
        </view>
        <view class='section-user-right'>
          <view class='username '>{{webUserData.name}}</view>
        </view>
        <view class='sign'>
          <view class='btn-sign'>已签到</view>
        </view>
      </view>
    </view>
    <view class='page-content'>
      <view class='content-box'>
        <view class='content-items'>
          <text>我的订单</text>
          <text>全部订单》</text>
        </view>
        <view class='item-list'>
          <view class='tab-item'>
            <image src='/images/nav-icons/carted.png' class='img'></image>
            <text>购物车</text>

          </view>
          <view class='tab-item'>
            <image src='/images/nav-icons/carted.png' class='img'></image>
            <text>我的订单</text>

          </view>
          <view class='tab-item'>
            <image src='/images/nav-icons/carted.png' class='img'></image>
            <text>地址管理</text>

          </view>

        </view>
      </view>
      <view class='task-box'>
        <view class='content-items'>
          <text>任务中心</text>
          <text>全部任务》</text>
        </view>
        <view class='task-list'>
          <view class='task-item'>
            <text>绑定手机</text>
            <text>接受</text>
          </view>
          <view class='task-item'>
            <text>绑定手机</text>
            <text>进行中</text>
          </view>
        </view>
      </view>
    </view>
  </scroll-view>
</view>