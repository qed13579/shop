/* pages/order/logistics/logistics.wxss */
.wrap{
 width:100%;
 height: 100%;
 font-size: 28rpx;


}
.page-top{
  padding: 10rpx 20rpx;
  font-size: 30rpx;
  color: #000;
}
.line{
  height: 20rpx;
  background: #F6F6F6;
}
.list-item{
  padding:20rpx 20rpx 20rpx 60rpx;
  color: rgb(94, 92, 92);
  position: relative;
}
.image-icon{
  position: absolute;
  top:0;
  left: 0rpx;
  z-index: 1111;
}
.image-icon .icon{
  width: 58rpx;
  height:58rpx;

}
.list-item::after{
  position: absolute;
  content: '';
  height: 103%;
  border-left: 2px solid #ccc;
  top: 15rpx;
  left:26rpx;
  z-index: 111;
}
.list-item:last-child:after{
 
  border:0px;

}
.special{
  color: #000;
  font-weight: bold;
}
.list .list-item:not(:first-child)::before{
  position: absolute;
  top: 0;
  left: 60rpx;
  height: 1rpx;
  content: '';
  width: 100%;
  border-bottom: 1rpx solid rgb(212, 209, 209);
}
.order-num{
  color: #A5A5A5;
  font-size: 30rpx;
}