/* pages/order/comment/comment.wxss */

.box {
  height: 800rpx;
  width: 100%;
  /* background-color: red; */
}

.top {
  height: 200rpx;
  width: 100%;
  /* background-color: yellow; */
}

.left {
  float: left;
  /* background-color: skyblue; */
  height: 200rpx;
  width: 200rpx;
}

.right {
  float: left;
  height: 100rpx;
  width: 550rpx;
  /* background-color: greenyellow; */
}

.rt {
  height: 100rpx;
  width: 550rpx;
  /* background-color: rebeccapurple; */
  line-height: 100rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
}

.rb {
  height: 100rpx;
  width: 550rpx;
  /* background-color: violet; */
}

.img {
  margin: 20rpx;
  height: 160rpx;
  width: 160rpx;
  /* background-color: gainsboro; */
}

.bot {
  width: 100%;
  height: 500rpx;
  background-color: whitesmoke;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 30rpx;
}

.bot2 {
  width: 100%;
  height: 460rpx;
  background-color: whitesmoke;
  font-size: 30rpx;
}

.btn {
  /* height: 100rpx; */
  width: 95%;
  margin: 0 auto;
  background: red;
  color: #fff;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 36rpx;
  border-radius: 10rpx;
}

.comment1-description {
  padding: 30rpx 0;
  display: flex;
  flex-direction: row;
}

.stars {
  /* background-color: gainsboro; */
  width: 50rpx;
  height: 50rpx;
  background-size: 50rpx 50rpx;
  margin-left: 30rpx;
  transition: 600ms;
}

.on {
  /* background-color: yellow; */
  width: 50rpx;
  height: 50rpx;
  background-size: 50rpx 50rpx;
  transition: 1s;
  transform: scale(1, 1);
}
