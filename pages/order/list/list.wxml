<view  class="tab-h" scroll-left="{{scrollLeft}}">
  <view class="tab-item {{status==0?'active':''}}"  data-status="0" bindtap="swichNav">全部</view>
  <view class="tab-item {{status==4?'active':''}}"  data-status="4" bindtap="swichNav">待发货</view>
  <view class="tab-item {{status==5?'active':''}}"  data-status="5" bindtap="swichNav">待收货</view>
  <view class="tab-item {{status==10?'active':''}}"  data-status="10" bindtap="swichNav">已完成</view>

</view>

