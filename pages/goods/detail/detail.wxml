    <scroll-view class='boxbot' scroll-y="true" bindscrolltolower="lower" bindscrolltoupper="onPullDownRefresh"  style="height:{{winHeight-80/rpxR}}px">


      <block wx:for="{{commentlist}}" wx:key wx:for-item="item">
        <view class='botbox'>
          <view class='bbtop'>

            <image src='{{item.img}}' class='bbtopleft'></image>

            <view class='bbtopright'>{{item.name}}</view>
          </view>
          <view class='bbbot'>
            {{item.content}}
          </view>
        </view>
      </block>

      <view class='tips2'>
        <view wx:if="{{isHasData}}" hidden='{{hidden}}'>
          <view wx:if="{{hasMore}}" class="tip-text">
            <!-- <image class="loading-img" src="../../images/loading.gif"></image>  -->
            上拉加载...
          </view>
          <view wx:else>
            <text class="tip-text">没有更多内容了</text>
          </view>
        </view>
        <!-- 底部加载提示 end -->
        <!-- 如果当前数据为空则显示 start  -->
        <view hidden='{{hidden}}' class='notfind1' wx:else>
          <image src='/images/goodlist/notfind.png'></image>
          <view class='text1'>暂无数据</view>
        </view>
      </view>

    </scroll-view>

</block>