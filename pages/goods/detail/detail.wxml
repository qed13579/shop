






 <view class="tab-h">
  <view class="tab-item {{status==1?'active':''}}" data-status="1" bindtap="swichNav">商品详情</view>
  <view class="tab-item {{status==2?'active':''}}" data-status="2" bindtap="swichNav">评价</view>

</view> 
<skeleton selector="skeleton" loading="spin" bgcolor="#FFF" wx:if="{{showSkeleton}}">
</skeleton>






<block wx:if="{{status==1}}">



    <scroll-view class='boxbot' scroll-y="true" bindscrolltolower="lower" bindscrolltoupper="onPullDownRefresh"  style="height:{{winHeight-80/rpxR}}px">

  <import src="../../../wxParse/wxParse.wxml" />
  <view class="wxParse skeleton">
    <template is="wxParse" data="{{wxParseData:contents.nodes}}" />
  </view>


  
</scroll-view>



</block>

<block wx:if="{{status==2}}">


